<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <menuitem id="menu_employee_education_root" name="Education" parent="hr.menu_hr_root"/>

    <record id="view_employee_education_degree_list" model="ir.ui.view">
        <field name="name">employee.education.degree.tree</field>
        <field name="model">employee.education.degree</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_employee_education_degree_form" model="ir.ui.view">
        <field name="name">employee.education.degree.form</field>
        <field name="model">employee.education.degree</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_education_degree" model="ir.actions.act_window">
        <field name="name">Degrees</field>
        <field name="res_model">employee.education.degree</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_employee_education_degree"
              name="Degrees"
              parent="menu_employee_education_root"
              action="action_employee_education_degree"/>
</odoo>
