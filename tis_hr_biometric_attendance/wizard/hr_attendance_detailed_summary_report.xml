<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_hr_attendance_detailed_summary_wizard_form" model="ir.ui.view">
        <field name="name">hr.attendance.detailed.summary.wizard.form</field>
        <field name="model">hr.attendance.detailed.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance detailed Summary Wizard">
                <group>
                    <group>
                        <field name="company_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        <field name="department_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        <field name="employee_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>

                </group>
                <footer>
                    <button name="action_export_xlsx" type="object" string="Print XLSX" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_hr_attendance_detailed_summary_wizard" model="ir.actions.act_window">
        <field name="name">Attendance Detailed Summary Wizard</field>
        <field name="res_model">hr.attendance.detailed.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu item (optional, if you want a menu for the wizard) -->
    <menuitem id="menu_hr_attendance_detailed_summary_wizard"
              name="Attendance Detailed Summary Wizard"
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_hr_attendance_detailed_summary_wizard"/>
</odoo>
