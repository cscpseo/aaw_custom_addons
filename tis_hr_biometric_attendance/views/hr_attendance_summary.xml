<odoo>
    <record id="view_hr_attendance_summary_list" model="ir.ui.view">
        <field name="name">hr.attendance.summary.list</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id" width="50%"/>
                <field name="date_from" width="10%"/>
                <field name="date_to" width="10%"/>
                <field name="total_days" width="5%"/>
                <field name="present_days" width="5%"/>
                <field name="late_count" width="5%"/>
                <!--                <field name="leave_days" width="10%"/>-->
                <field name="absent_days" width="10%"/>
                <field name="department_id" width="10%"/>
                <field name="company_id" width="10%"/>
                <field name="summary_date" width="10%"/>
            </list>
        </field>
    </record>

    <record id="view_hr_attendance_summary_search" model="ir.ui.view">
        <field name="name">hr.attendance.summary.search</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <search string="Attendance Summary">
                <field name="employee_id"/>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <!-- Use built-in Odoo filter_date mechanism -->
                <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                <filter string="Department" name="department" domain="[]" context="{'group_by':'department_id'}"/>
                <filter string="Company" name="company" domain="[]" context="{'group_by':'company_id'}"/>
                <filter string="Last 7 Days" name="last_7_days" context="{'filter_date':'last_7_days'}"/>
                <filter string="This Month" name="this_month" context="{'filter_date':'this_month'}"/>
            </search>
        </field>
    </record>

    <record id="view_hr_attendance_summary_form" model="ir.ui.view">
        <field name="name">hr.attendance.summary.form</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" width="50%" readonly="1"/>
                            <field name="date_from" width="10%"/>
                            <field name="date_to" width="10%"/>
                            <field name="total_days" width="5%"/>
                        </group>
                        <group>
                            <field name="present_days" width="5%"/>
                            <field name="absent_days" width="10%"/>
                            <field name="summary_date" width="10%"/>
                        </group>
                    </group>
                </sheet>


            </form>
        </field>
    </record>


    <!-- Link search view to action -->
    <record id="action_hr_attendance_summary" model="ir.actions.act_window">
        <field name="name">Attendance Summaries</field>
        <field name="res_model">hr.attendance.summary</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_hr_attendance_summary_list"/>
        <field name="search_view_id" ref="view_hr_attendance_summary_search"/>
        <field name="help" type="html">
            <p>Shows summary of attendance with working days, present, leave &amp; absent.</p>
        </field>
    </record>


    <record id="action_hr_attendance_summary" model="ir.actions.act_window">
        <field name="name">Attendance Summaries</field>
        <field name="res_model">hr.attendance.summary</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Shows summary of attendance with working days, present, leave &amp; absent.</p>
        </field>
    </record>

    <menuitem id="menu_hr_attendance_summary" name="Attendance Summaries"
              parent="hr_attendance.menu_hr_attendance_root"/>
    <menuitem id="menu_hr_attendance_summary_records"
              name="All Summaries"
              parent="menu_hr_attendance_summary"
              action="action_hr_attendance_summary"/>
</odoo>
