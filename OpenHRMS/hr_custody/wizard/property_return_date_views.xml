<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View of Return date wizard-->
    <record id='property_return_date_view_form' model='ir.ui.view'>
        <field name="name">property.return.date.view.form</field>
        <field name="model">property.return.date</field>
        <field name="arch" type="xml">
            <form string="Renewal Request">
                <group>
                    <group>
                        <field name="returned_date"/>
                    </group>
                </group>
                <footer>
                    <button name="action_proceed" string="Proceed" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Action of Return date wizard-->
    <record id='property_return_date_act' model='ir.actions.act_window'>
        <field name="name">Custody Request</field>
        <field name="res_model">property.return.date</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="property_return_date_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
