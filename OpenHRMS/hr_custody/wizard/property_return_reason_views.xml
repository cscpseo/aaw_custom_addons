<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Property return reason form view-->
    <record id='property_return_reason_view_form' model='ir.ui.view'>
        <field name="name">property.return.reason.form</field>
        <field name="model">property.return.reason</field>
        <field name="arch" type="xml">
            <form string="Update Reason">
                <group>
                    <field name="reason" required="True"/>
                </group>
                <footer>
                    <button name="action_send_reason" string="Proceed" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
<!--    Property return reason menu action-->
    <record id='wizard_reason_act' model='ir.actions.act_window'>
        <field name="name">Update Reason</field>
        <field name="res_model">property.return.reason</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="property_return_reason_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
