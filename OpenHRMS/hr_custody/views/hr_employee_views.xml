<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Extended hr_employee_form_view-->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.hr.custody</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="action_custody_view"
                        type="object" icon="fa-list-ol">
                    <field string="Custody" name="custody_count"
                           widget="statinfo"/>
                </button>
                <button class="oe_stat_button" name="action_equipment_view"
                        type="object" icon="fa-tablet">
                    <field string="Equipments" name="equipment_count"
                           widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
