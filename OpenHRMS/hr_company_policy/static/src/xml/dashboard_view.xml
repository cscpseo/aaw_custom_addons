<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--
    This XML template extends the "LoginEmployeeDetails" view by adding a button labeled "Company Policy" inside
    the "contact" div element. When clicked, this button triggers the "getCompanyPolicy" function.
    -->
    <t t-inherit="LoginEmployeeDetails" t-inherit-mode="extension">
        <xpath expr="//div[@class='contact' ]" position="inside">
            <div class="company-container">
                <button type="button" t-on-click="getCompanyPolicy" class="btn btn-third oe_company_policy"
                        id="company_policy">
                    Company Policy
                </button>
            </div>
        </xpath>
    </t>
</templates>
